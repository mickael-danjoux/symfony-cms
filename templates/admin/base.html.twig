<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>

    <title>{% block title %}Administration {% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}

</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav navbar navbar-expand pe-3">
    <a class="navbar-brand" href="{{ path('admin_index') }}"></a>
    <button class="btn btn-info btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i>
    </button>
    <div class="navbar-date mx-auto d-none d-lg-block">

    </div>
    <!-- Navbar-->
    <ul class="navbar-nav ms-auto ms-md-0">
        <li class="nav-item dropdown user-dropdown">
            <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-bs-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false"><i
                        class="fas fa-user fa-fw"></i></a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href=""><i class="fas fa-sign-out-alt"></i><span
                            class="ms-2">DÃ©connexion</span></a>
            </div>
        </li>
    </ul>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion " id="sidenavAccordion">
            {% include 'admin/partials/sidebar-menu.html.twig' %}
        </nav>
    </div>
    <div id="layoutSidenav_content">
        <main class="main-content">

            {% for label, messages in app.flashes %}
                <div class="container  my-2">
                    <div class="alert alert-{{ label }} pb-0">
                        {% for message in messages %}
                            <p>{{ message | raw }}</p>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            {% block body %}
            {% endblock %}

        </main>
        <footer class="py-4 mt-auto">
            <div class="text-muted">Copyright &copy;  <span id="cDate"></span></div>
        </footer>
    </div>
</div>
<script>
    const date = new Date()
    document.getElementById('cDate').innerHTML = date.getFullYear();
</script>


{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

</body>
</html>
