{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <ol class="breadcrumb main-breadcrumb px-3 py-2">
        <li class="breadcrumb-item"><a href="{{ path('admin_user_list') }}">Utilisateurs</a></li>
        <li class="breadcrumb-item">Editer un utilisateur</li>
    </ol>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <span class="h3 mb-0">Editer un utilisateur</span>
                        <a href="{{ path('admin_user_list') }}" class="btn-back">Retour</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                {{ form_rest(form) }}
                                <div class="row">
                                    <div class="col-12">
                                        <button class="btn btn-save">Enregistrer</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
