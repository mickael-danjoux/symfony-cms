{% extends 'app/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Contact</h1>
            </div>
        </div>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-12 col-md-6">
                {{ form_row(form.company) }}

            </div>
        </div>

        <div class="row">

            <div class="col-12 col-md-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.lastName) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.phone) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.address) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.city) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.message) }}
            </div>
            <div class="col-12 col-md-12">
                {{ form_row(form.agreeTerms) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="row">
            <div class="col-12">
                <button class="btn btn-primary">Envoyer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
