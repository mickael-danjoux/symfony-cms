{% extends 'app/base_innerpage.html.twig' %}

{% set breadcrumb = [{'label': page.title}] %}

{% block pageContent %}

<section id="contact" class="mb-5">
    <div class="container">
        <div class="row mb-3">
            <div class="col text-center">
                <h1>{{ page.title }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-12 col-md-6">
                        {{ form_row(form.company) }}
                    </div>
                </div>
                <div class="row">

                    <div class="col-12 col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.address) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.zipCode) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.message) }}
                    </div>
                    <div class="col-12 col-md-12">
                        {{ form_row(form.agreeTerms) }}
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <button class="btn btn-success">Envoyer</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>

{% endblock %}
