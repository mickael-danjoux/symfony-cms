{% if app.session.flashBag.peekAll is not empty %}
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            <div class="container">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p class="text-center">{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
