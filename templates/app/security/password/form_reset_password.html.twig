{% extends 'app/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h1>Mot de passe oublié ?</h1>
                    <h2>Je demande un lien de réinitialisation</h2>
                </div>
                <div class="row mt-5">
                    <div class="col-12 col-md-6 col-lg-4 mx-auto">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.password.first) }}
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12">
                                {{ form_row(form.password.second) }}
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Valider</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
